# .env (詳細版)
# ===========================================
# MediaMTX Port Configuration
# ===========================================
MEDIAMTX_RTSP_HOST=xxx.xxx.xxx.xxx
MEDIAMTX_RTSP_PORT=8554
MEDIAMTX_RTSP_TRANSPORT=tcp
MEDIAMTX_RTMP_PORT=1935
MEDIAMTX_HTTP_PORT=8888
MEDIAMTX_WEBRTC_PORT=8889
MEDIAMTX_WEBRTC_UDP_PORT1=8890
MEDIAMTX_WEBRTC_UDP_PORT2=8189

# ===========================================
# RTSP Relay 1 Configuration
# ===========================================
RELAY1_INPUT_HOST=xxx.xxx.xxx.xxx
RELAY1_INPUT_PORT=8554
RELAY1_INPUT_PATH=zzz
RELAY1_OUTPUT_PATH=stream

# ===========================================
# RTSP Relay 2 Configuration
# ===========================================
#RELAY2_INPUT_HOST=xxx.xxx.xxx.xxx
#RELAY2_INPUT_PORT=8554
#RELAY2_INPUT_PATH=zzz
#RELAY2_OUTPUT_PATH=stream

# ===========================================
# FFmpeg Optimization Settings
# ===========================================
BUFFER_SIZE=1024M
MAX_DELAY=500000
THREAD_QUEUE_SIZE=4096
REORDER_QUEUE_SIZE=5000
PROBE_SIZE=16M
ANALYZE_DURATION=5M

# ===========================================
# System Settings
# ===========================================
TIMEZONE=Asia/Tokyo
LOG_LEVEL=warning
MEMORY_LIMIT=8g
SHM_SIZE=4gb

